# OppaTalent - Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4  # or gpt-3.5-turbo for lower cost

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
ENV=development  # or production

# Canvas LMS Integration (optional)
CANVAS_CONSUMER_KEY=your_canvas_consumer_key
CANVAS_CONSUMER_SECRET=your_canvas_consumer_secret
CANVAS_API_URL=https://canvas.instructure.com/api/v1
CANVAS_API_TOKEN=your_canvas_api_token

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Settings
PORT=5000
MAX_FILE_SIZE=16777216  # 16MB in bytes
UPLOAD_FOLDER=temp_uploads

# Rate Limiting
RATE_LIMIT_PER_HOUR=200
RATE_LIMIT_PER_MINUTE=50

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# AI Cost Limits
MAX_DAILY_COST=10.0
MAX_USER_COST=1.0
